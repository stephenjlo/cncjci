{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des News{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-newspaper text-primary"></i>
            Gestion des News
        </h1>
        <a href="{{ path('admin_news_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>
            Nouvelle News
        </a>
    </div>

    {% if newsList|length > 0 %}
        <div class="card">
            <div class="card-header">
                <i class="bi bi-list-ul"></i>
                Liste des news ({{ newsList|length }})
            </div>
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 60px;">#</th>
                            <th>Titre</th>
                            <th>Description</th>
                            <th style="width: 120px;">Date</th>
                            <th style="width: 100px;" class="text-center">Statut</th>
                            <th style="width: 200px;" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for news in newsList %}
                            <tr>
                                <td>{{ news.id }}</td>
                                <td>
                                    <strong>{{ news.title }}</strong>
                                </td>
                                <td>
                                    <small class="text-muted">{{ news.description|u.truncate(80, '...') }}</small>
                                </td>
                                <td>
                                    <small>{{ news.createdAt|date('d/m/Y') }}</small>
                                </td>
                                <td class="text-center">
                                    {% if news.isActive %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Actif
                                        </span>
                                    {% else %}
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Inactif
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ news.url }}" target="_blank" class="btn btn-outline-info" title="Voir">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="{{ path('admin_news_edit', {id: news.id}) }}" class="btn btn-outline-primary" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="post" action="{{ path('admin_news_toggle', {id: news.id}) }}" style="display: inline;">
                                            <button type="submit" class="btn btn-outline-{{ news.isActive ? 'warning' : 'success' }}" title="{{ news.isActive ? 'Désactiver' : 'Activer' }}">
                                                <i class="bi bi-{{ news.isActive ? 'pause-circle' : 'play-circle' }}"></i>
                                            </button>
                                        </form>
                                        <form method="post" action="{{ path('admin_news_delete', {id: news.id}) }}" style="display: inline;" onsubmit="return confirm('Confirmer la suppression ?');">
                                            <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <h4 class="mt-3">Aucune news trouvée</h4>
                <p class="text-muted">Commencez par créer votre première news</p>
                <a href="{{ path('admin_news_new') }}" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    Créer une news
                </a>
            </div>
        </div>
    {% endif %}
{% endblock %}
