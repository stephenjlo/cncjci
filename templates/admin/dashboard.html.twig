{% extends 'admin/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-speedometer2 text-primary"></i>
            Tableau de Bord
        </h1>
        <div class="text-muted">
            {{ 'now'|date('d/m/Y H:i') }}
        </div>
    </div>

    <div class="row">
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            {# Statistiques pour Super Admin #}
            <div class="col-md-4">
                <div class="card text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Total Cabinets</h6>
                                <h2 class="mb-0 mt-2">{{ stats.totalCabinets ?? 0 }}</h2>
                            </div>
                            <div class="fs-1 opacity-50">
                                <i class="bi bi-building"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="{{ path('admin_cabinet_index') }}" class="text-white text-decoration-none">
                            Gérer les cabinets <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Total Avocats</h6>
                                <h2 class="mb-0 mt-2">{{ stats.totalLawyers ?? 0 }}</h2>
                            </div>
                            <div class="fs-1 opacity-50">
                                <i class="bi bi-people"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="{{ path('admin_lawyer_index') }}" class="text-white text-decoration-none">
                            Gérer les avocats <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-white" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Cabinets Actifs</h6>
                                <h2 class="mb-0 mt-2">{{ stats.activeCabinets ?? 0 }}</h2>
                            </div>
                            <div class="fs-1 opacity-50">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% elseif is_granted('ROLE_RESPO_CABINET') %}
            {# Statistiques pour Responsable Cabinet #}
            <div class="col-md-6">
                <div class="card text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Mon Cabinet</h6>
                                <h5 class="mb-0 mt-2">{{ user.cabinet.name }}</h5>
                            </div>
                            <div class="fs-1 opacity-50">
                                <i class="bi bi-building"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="{{ path('admin_cabinet_edit', {id: user.cabinet.id}) }}" class="text-white text-decoration-none">
                            Modifier le cabinet <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card text-white" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Avocats du Cabinet</h6>
                                <h2 class="mb-0 mt-2">{{ stats.cabinetLawyers ?? 0 }}</h2>
                            </div>
                            <div class="fs-1 opacity-50">
                                <i class="bi bi-people"></i>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <a href="{{ path('admin_lawyer_index') }}" class="text-white text-decoration-none">
                            Gérer les avocats <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            {# Profil pour Lawyer simple #}
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-person-circle display-1 text-primary mb-3"></i>
                        <h4>Bienvenue, {{ user.fullName }}!</h4>
                        <p class="text-muted">Gérez votre profil professionnel</p>
                        <a href="{{ path('admin_lawyer_profile') }}" class="btn btn-primary">
                            <i class="bi bi-pencil"></i>
                            Modifier mon profil
                        </a>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

    {% if is_granted('ROLE_RESPO_CABINET') or is_granted('ROLE_SUPER_ADMIN') %}
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-clock-history"></i>
                        Activité Récente
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Dernier avocat ajouté</h6>
                                    <small class="text-muted">{{ lastActivity.date ?? 'N/A' }}</small>
                                </div>
                                <p class="mb-1">{{ lastActivity.lawyer ?? 'Aucun' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}