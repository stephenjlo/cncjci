{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Spécialités{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-briefcase text-primary"></i>
            Spécialités Juridiques
        </h1>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-list-ul"></i>
                    Liste des spécialités ({{ specialties|length }})
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Slug</th>
                                <th style="width: 100px;" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for specialty in specialties %}
                                <tr>
                                    <td><strong>{{ specialty.name }}</strong></td>
                                    <td>
                                        {% if specialty.description %}
                                            <small class="text-muted">{{ specialty.description|slice(0, 50) }}{% if specialty.description|length > 50 %}...{% endif %}</small>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td><code class="small">{{ specialty.slug }}</code></td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <button type="button"
                                                    class="btn btn-outline-primary btn-edit"
                                                    data-id="{{ specialty.id }}"
                                                    data-name="{{ specialty.name }}"
                                                    data-description="{{ specialty.description }}"
                                                    title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <form method="post"
                                                  action="{{ path('admin_specialty_delete', {id: specialty.id}) }}"
                                                  style="display: inline;"
                                                  onsubmit="return confirm('Supprimer cette spécialité ?');">
                                                <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        Aucune spécialité
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-plus-circle"></i>
                    <span id="form-title">Ajouter une spécialité</span>
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('admin_specialty_new') }}" id="specialty-form">
                        <input type="hidden" name="specialty_id" id="specialty_id" value="">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom de la spécialité</label>
                            <input type="text"
                                   name="name"
                                   id="name"
                                   class="form-control"
                                   placeholder="Ex: Droit des affaires"
                                   required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description (optionnelle)</label>
                            <textarea name="description"
                                      id="description"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Courte description..."></textarea>
                            <small class="form-text text-muted">
                                Le slug sera généré automatiquement
                            </small>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" id="submit-btn">
                                <i class="bi bi-check-circle"></i>
                                <span id="submit-text">Créer</span>
                            </button>
                            <button type="button" class="btn btn-secondary d-none" id="cancel-btn">
                                <i class="bi bi-x-circle"></i>
                                Annuler
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card mt-3 bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle text-primary"></i>
                        Information
                    </h6>
                    <p class="small mb-0">
                        Les spécialités juridiques permettent de catégoriser les domaines d'expertise des avocats.
                        Exemples : Droit des affaires, Droit pénal, Droit de la famille, etc.
                    </p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('specialty-form');
            const formTitle = document.getElementById('form-title');
            const submitBtn = document.getElementById('submit-btn');
            const submitText = document.getElementById('submit-text');
            const cancelBtn = document.getElementById('cancel-btn');
            const nameInput = document.getElementById('name');
            const descriptionInput = document.getElementById('description');
            const specialtyIdInput = document.getElementById('specialty_id');

            // Boutons d'édition
            document.querySelectorAll('.btn-edit').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.dataset.id;
                    const name = this.dataset.name;
                    const description = this.dataset.description || '';

                    // Passer en mode édition
                    formTitle.textContent = 'Modifier la spécialité';
                    submitText.textContent = 'Modifier';
                    nameInput.value = name;
                    descriptionInput.value = description;
                    specialtyIdInput.value = id;
                    form.action = '{{ path('admin_specialty_edit', {id: '__ID__'}) }}'.replace('__ID__', id);
                    cancelBtn.classList.remove('d-none');

                    // Scroll vers le formulaire
                    form.scrollIntoView({ behavior: 'smooth', block: 'start' });
                });
            });

            // Bouton annuler
            cancelBtn.addEventListener('click', function() {
                formTitle.textContent = 'Ajouter une spécialité';
                submitText.textContent = 'Créer';
                nameInput.value = '';
                descriptionInput.value = '';
                specialtyIdInput.value = '';
                form.action = '{{ path('admin_specialty_new') }}';
                cancelBtn.classList.add('d-none');
            });
        });
    </script>
{% endblock %}
