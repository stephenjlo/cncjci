{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Spécialités{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-briefcase text-primary"></i>
            Spécialités Juridiques
        </h1>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <i class="bi bi-list-ul"></i>
                    Liste des spécialités ({{ specialties|length }})
                </div>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Slug</th>
                                <th style="width: 100px;" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for specialty in specialties %}
                                <tr>
                                    <td><strong>{{ specialty.name }}</strong></td>
                                    <td>
                                        {% if specialty.description %}
                                            <small class="text-muted">{{ specialty.description|slice(0, 50) }}{% if specialty.description|length > 50 %}...{% endif %}</small>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td><code class="small">{{ specialty.slug }}</code></td>
                                    <td class="text-center">
                                        <form method="post"
                                              action="{{ path('admin_specialty_delete', {id: specialty.id}) }}"
                                              style="display: inline;"
                                              onsubmit="return confirm('Supprimer cette spécialité ?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center text-muted py-4">
                                        Aucune spécialité
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-plus-circle"></i>
                    Ajouter une spécialité
                </div>
                <div class="card-body">
                    <form method="post" action="{{ path('admin_specialty_new') }}">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom de la spécialité</label>
                            <input type="text"
                                   name="name"
                                   id="name"
                                   class="form-control"
                                   placeholder="Ex: Droit des affaires"
                                   required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description (optionnelle)</label>
                            <textarea name="description"
                                      id="description"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Courte description..."></textarea>
                            <small class="form-text text-muted">
                                Le slug sera généré automatiquement
                            </small>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check-circle"></i>
                            Créer
                        </button>
                    </form>
                </div>
            </div>

            <div class="card mt-3 bg-light">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="bi bi-info-circle text-primary"></i>
                        Information
                    </h6>
                    <p class="small mb-0">
                        Les spécialités juridiques permettent de catégoriser les domaines d'expertise des avocats.
                        Exemples : Droit des affaires, Droit pénal, Droit de la famille, etc.
                    </p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
