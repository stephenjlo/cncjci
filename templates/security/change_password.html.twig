<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Changement de mot de passe - Annuaire Juridique CI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .change-password-card {
            max-width: 500px;
            width: 100%;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        }

        .card-header {
            background: white;
            padding: 2rem;
            border-radius: 1rem 1rem 0 0;
            text-align: center;
        }

        .card-body {
            background: white;
            padding: 2rem;
            border-radius: 0 0 1rem 1rem;
        }

        .brand-logo {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #ff7900 0%, #e66d00 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2rem;
            color: white;
        }

        .password-strength {
            font-size: 0.85rem;
            margin-top: 0.5rem;
        }
    </style>
</head>
<body>
<div class="change-password-card">
    <div class="card-header">
        <div class="brand-logo">
            <i class="bi bi-shield-lock-fill"></i>
        </div>
        <h4 class="mb-0">Changement de mot de passe</h4>
        {% if is_mandatory %}
            <p class="text-danger mb-0 mt-2">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Obligatoire</strong>
            </p>
            <small class="text-muted">Vous devez changer votre mot de passe avant de continuer</small>
        {% else %}
            <p class="text-muted mb-0">Sécurisez votre compte</p>
        {% endif %}
    </div>

    <div class="card-body">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle-fill me-2"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% if is_mandatory %}
            <div class="alert alert-warning">
                <i class="bi bi-info-circle"></i>
                <strong>Première connexion</strong><br>
                <small>
                    Votre mot de passe actuel est : <code>ChangeMe2024!</code><br>
                    Veuillez le changer immédiatement pour sécuriser votre compte.
                </small>
            </div>
        {% endif %}

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.currentPassword) }}
            {{ form_widget(form.currentPassword) }}
            {{ form_errors(form.currentPassword) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.newPassword.first) }}
            {{ form_widget(form.newPassword.first, {'attr': {'id': 'new-password-input'}}) }}
            {{ form_errors(form.newPassword.first) }}
            <div class="password-strength" id="password-strength"></div>
        </div>

        <div class="mb-3">
            {{ form_label(form.newPassword.second) }}
            {{ form_widget(form.newPassword.second) }}
            {{ form_errors(form.newPassword.second) }}
        </div>

        <div class="alert alert-info small">
            <i class="bi bi-lightbulb"></i>
            <strong>Conseils pour un mot de passe sécurisé :</strong>
            <ul class="mb-0 mt-2">
                <li>Au moins 8 caractères</li>
                <li>Mélange de majuscules et minuscules</li>
                <li>Chiffres et caractères spéciaux</li>
                <li>Évitez les mots du dictionnaire</li>
            </ul>
        </div>

        <button class="btn btn-primary btn-lg w-100" type="submit">
            <i class="bi bi-check-circle"></i>
            Changer mon mot de passe
        </button>

        {{ form_end(form) }}

        {% if not is_mandatory %}
            <div class="text-center mt-3">
                <a href="{{ path('admin_dashboard') }}" class="text-muted text-decoration-none">
                    <i class="bi bi-arrow-left"></i>
                    Retour au tableau de bord
                </a>
            </div>
        {% else %}
            <div class="text-center mt-3">
                <a href="{{ path('app_logout') }}" class="text-danger text-decoration-none">
                    <i class="bi bi-box-arrow-right"></i>
                    Se déconnecter
                </a>
            </div>
        {% endif %}
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Indicateur de force du mot de passe
    const passwordInput = document.getElementById('new-password-input');
    const strengthDiv = document.getElementById('password-strength');

    if (passwordInput && strengthDiv) {
        passwordInput.addEventListener('input', function() {
            const password = this.value;
            let strength = 0;
            let feedback = '';
            let color = '';

            if (password.length >= 8) strength++;
            if (password.length >= 12) strength++;
            if (/[a-z]/.test(password) && /[A-Z]/.test(password)) strength++;
            if (/\d/.test(password)) strength++;
            if (/[^a-zA-Z0-9]/.test(password)) strength++;

            switch(strength) {
                case 0:
                case 1:
                    feedback = 'Très faible';
                    color = 'text-danger';
                    break;
                case 2:
                    feedback = 'Faible';
                    color = 'text-warning';
                    break;
                case 3:
                    feedback = 'Moyen';
                    color = 'text-info';
                    break;
                case 4:
                    feedback = 'Fort';
                    color = 'text-success';
                    break;
                case 5:
                    feedback = 'Très fort';
                    color = 'text-success fw-bold';
                    break;
            }

            if (password.length > 0) {
                strengthDiv.innerHTML = `Force du mot de passe : <span class="${color}">${feedback}</span>`;
            } else {
                strengthDiv.innerHTML = '';
            }
        });
    }
</script>
</body>
</html>
